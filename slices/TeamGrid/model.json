{
  "type": "SharedSlice",
  "id": "team_grid",
  "name": "TeamGrid",
  "variations": [
    {
      "id": "default_grid",
      "name": "Default Grid",
      "description": "Standard layout with grid items for each person, including image, name, role, and social links. Optional section title and view-all link.",
      "version": "initial",
      "imageUrl": "",
      "docURL": "...",
      "primary": {
        "title": {
          "type": "StructuredText",
          "config": {
            "single": "heading2",
            "label": "Section Title"
          }
        },
        "view_all_link": {
          "type": "Link",
          "config": {
            "label": "View All Link",
            "allowText": true,
            "repeat": false,
            "select": null
          }
        },
        "people": {
          "type": "Group",
          "config": {
            "label": "People",
            "fields": {
              "photo": {
                "type": "Image",
                "config": {
                  "label": "Photo"
                }
              },
              "name": {
                "type": "Text",
                "config": {
                  "label": "Name"
                }
              },
              "role": {
                "type": "Text",
                "config": {
                  "label": "Role"
                }
              },
              "social_links": {
                "type": "Link",
                "config": {
                  "label": "Social/Profile Links",
                  "allowText": true,
                  "repeat": true,
                  "variants": ["FB", "LN", "TW"],
                  "select": null
                }
              }
            }
          }
        }
      }
    }
  ]
}
